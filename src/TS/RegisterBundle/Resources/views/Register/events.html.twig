{% block events %}
<section id="evenements" class="well">
	<div id="headerEvents">
		<div id="titleEvents">
			<h2>Events</h2>
		</div>
		<div id="buttons">
			<input type="" value="New" class="btn btn-default" data-toggle="modal" href="#newEventForm"/>
			<input type="" value="Edit" class="btn btn-default" data-toggle="modal" href="#editEventForm"/>
			<input type="" value="Remove" class="btn btn-default" data-toggle="modal" href="#removeEventForm"/>
		</div>
	</div>
	<Br/>
	<div class="table-responsive">
	<table class="table table-bordered table-condensed">
		<thead>
			<tr>
			   <th>Start Date</th>
			   <th>End Date</th>
			   <th>Id</th>
			   <th>Id Parent</th>
			   <th>Site</th>
			   <th>Station</th>
			   <th>Equip.</th>
			   <th>Origin/Cause</th>
			   <th>Consequence</th>
			   <th>Losses</th>
			</tr>
		</thead>
		<tbody>
			{% for event in listEvents %}
			<tr id="{{ event.id }}" class="default accordion-toggle" data-toggle="collapse" data-target="#collapse{{event.id}}" onclick="SelectLigne(this)">
			   <td>{{ event.startDate|date('d/m/Y H:i') }}</td>
			   <td>{{ event.endDate|date('d/m/Y H:i') }}</td>
			   <td>{{ event.id }}</td>
			   <td>{{ event.id }}</td>
			   <td>{{ event.site.siteName }}</td>
			   <td>{{ event.substation.name }}</td>
			   <td>{{ event.equipment.name }}</td>
			   <td>{{ event.origin }}</td>
			   <td>{{ event.consequence }}</td>			   
			   <td>{{ event.ens }}</td>
			</tr>
			<tr id="coment{{ event.id }}" style="display: none" class="apparition">
				<td class="comentTab" colspan="11">	
					<div id="collapse{{event.id}}" class="collapse">
						<p>{{ event.coment|nl2br }}</p>
					</div>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
	</div>
</section>
{% endblock %}
