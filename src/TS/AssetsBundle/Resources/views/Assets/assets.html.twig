{% extends "@TSAssets//layout.html.twig" %}


{% block body %}	
	<section id="containerAssets">
		<div class='tree well col-md-2' id="clientsite">
			<h2>Clients</h2>
			{% for client in listClients %}
			<div>
				{{ client.clientName }}
				{% for site in listSites %}
				<div>
					{{ site.siteName }}
				</div>
				{% endfor %}
			</div>
			{% endfor %}
		</div>
				
		<div class="well col-md-2" id="arborescence" style="display:none">
			<h2 id="nomSiteArbre"></h2>
			<div class='tree' id="architecture">
				
			</div>
		</div>
		
		<div class="well col-md-8" id="description" style="display:none">
			<fieldset id="general">
				<h2 id="nomMateriel"></h2><br/>
				<label>Marque</label><input type="text" readonly="true" value="Xantrex"></input>
				<label>N° Série</label><input type="text" readonly="true" value="7803270"></input>
				<label>Code produit</label><input type="text" readonly="true" value=""></input><br/>
				<label>Gamme</label><input type="text" readonly="true" value="GT500E"></input>
				<label>N° SKU</label><input type="text" readonly="true" value="822-5252-05-00"></input>
				<label>N° EP</label><input type="text" readonly="true" value=""></input><br/>
				<label>Type</label><input type="text" readonly="true" value="822"></input>
				<label>Key pad</label><input type="text" readonly="true" value="2nd Gen"></input>
				<label>N° Type</label><input type="text" readonly="true" value=""></input>			
			</fieldset>
			<br/><br/>
			<fieldset>
				<fieldset id="versionlogicielle">
					<legend>Versions logicielles</legend>
					<label>CCU2</label><input type="text" readonly="true" value="151-0197-00-27"></input><br/>
					<label>Front panel</label><input type="text" readonly="true" value="15301020000"></input><br/>
					<label>Table des paramètres</label><input type="text" readonly="true" value="151-0449-00-03"></input><br/>
				</fieldset>
				<fieldset id="retrofit">
					<legend>Retrofits</legend>
					<label>DC motorized</label><input type="checkbox" onclick="return false" checked></input><br/>
					<label>Dew point control</label><input type="checkbox" onclick="return false" checked></input><br/>
					<label>M/S & FO</label><input type="checkbox" onclick="return false"></input><br/>
				</fieldset><br/>
				<fieldset id="date">
					<legend>Suivi onduleur</legend>
					<label>Année de fabrication</label><input type="date" readonly="true" value="2010"></input><br/>
					<label>Mise en service</label><input type="date" readonly="true" value="16/01/2011"></input><br/>
					<label>Fin de garantie</label><input type="date" readonly="true" value="16/01/2013"></input><br/>
					<label>Fin contrat de maintenance</label><input type="date" readonly="true" value="16/01/2031"></input><br/>
					<label>Dernière maintenance</label><input type="date" readonly="true" value="05/12/2014"></input><br/>
					<label>Prochaine maintenance</label><input type="date" readonly="true" value="05/12/2015"></input><br/>
				</fieldset>
				<fieldset id="option">
					<legend>Options</legend>
					<label>VAR</label><input type="checkbox" onclick="return false" checked></input><br/>
					<label>LVRT</label><input type="checkbox" onclick="return false" checked ></input><br/>
					<label>1K</label><input type="checkbox" onclick="return false"></input><br/>
					<label>LF</label><input type="checkbox" onclick="return false"></input><br/>
					<label>GI</label><input type="checkbox" onclick="return false"></input><br/>
				</fieldset>
			</fieldset>
		</div>
	</section>
	
{% endblock %}

